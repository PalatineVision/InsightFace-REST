FROM nvcr.io/nvidia/tensorrt:21.10-py3

ENV LC_ALL=C.UTF-8
ENV LANG=C.UTF-8
ENV PIP_INSTALL="python -m pip --no-cache-dir install --upgrade"

RUN export DEBIAN_FRONTEND=noninteractive && apt-get update -y &&\
    apt-get install -y\
            libgl1-mesa-glx \
            protobuf-compiler \
            libprotoc-dev \
            libb64-0d \
            libturbojpeg \
            python3-opencv \
            ffmpeg &&\
    rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN $PIP_INSTALL numpy==1.21.* && $PIP_INSTALL -r requirements.txt
# GPU specific packages
RUN $PIP_INSTALL cupy-cuda11x pynvjpeg

WORKDIR /app
COPY api_trt /app

ENTRYPOINT [ "bash" ]
CMD ["entrypoint.sh"]
